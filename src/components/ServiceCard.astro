---
import { Icon } from "astro-icon/components";

const { title, img, details } = Astro.props;
---

<div class="card">
  <div class="card2">
    <h4>{title}</h4>
    <Icon name={img} width={65} height={65} />
    <p>
      {details}
    </p>
  </div>
</div>

<style>
  .card {
    flex: 1;
    height: 408px;
    background-image: linear-gradient(163deg, #00ff75 0%, #3700ff 100%);
    border-radius: 20px;
    transition: all 0.3s;
  }

  .card2 {
    width: 100%;
    height: 408px;
    background-color: #1a1a1a;
    border-radius: 20px;
    transition: all 0.2s;
    padding: 10px 16px;
    display: flex;
    flex-direction: column;
    justify-content: space-around;
    align-items: center;
    border: 1px solid #405a4b;
    color: #f3f0ed;
  }

  .card2:hover {
    transform: scale(0.98);
    border-radius: 20px;
  }

  .card:hover {
    box-shadow: 0px 0px 30px 1px rgba(0, 255, 117, 0.3);
  }

  h4 {
    font-family: "Keania One", sans-serif;
    font-weight: 700;
    font-size: 24px;
    text-align: center;
  }
  p {
    font-family: "Noto Sans TC Variable", sans-serif;
    font-size: 16px;
    text-align: center;
  }
  @media (max-width: 968px) {
    .card{
      width: 240px;
      height: 320px;
    }
  }
</style>
